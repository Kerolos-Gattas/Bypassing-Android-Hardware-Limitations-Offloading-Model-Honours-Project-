<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kerolos.mathalgorithms.MainMenu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/factorials"
        android:id="@+id/factorialsBtn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fibonacci"
        android:id="@+id/fibonacciBtn"
        android:layout_below="@+id/factorialsBtn"
        android:layout_alignLeft="@+id/factorialsBtn"
        android:layout_alignStart="@+id/factorialsBtn"
        android:layout_marginTop="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/primals"
        android:id="@+id/primalsBtn"
        android:layout_below="@+id/fibonacciBtn"
        android:layout_alignLeft="@+id/fibonacciBtn"
        android:layout_alignStart="@+id/fibonacciBtn"
        android:layout_marginTop="39dp" />
</RelativeLayout>
